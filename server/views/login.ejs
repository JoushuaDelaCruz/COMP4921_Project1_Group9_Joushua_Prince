<%- include("templates/header", {additionalStyle: 'authentication.css', title: 'Log In'}) %>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h1 class="card-title text-center mb-3 fw-semibold fs-2">Log In</h1>
          <h2 class="card-title text-center mb-5 fw-normal fs-6 text-body-secondary">Login to you LinkMorpher Account</h2>
          <form action="/login/user" method="post">
            <div class="form-floating mb-3">
              <input type="text" name="username" placeholder="Username" 
              class="form-control 
              <% if (locals.invalid) { %> 
                <%= invalid %>"
             <% } %>" required>
              <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" placeholder="Password" class="form-control 
              <% if (locals.invalid) { %> 
                <%= invalid %>"
             <% } %>" required>
              <label for="floatingPassword">Password</label>
              <% if (locals.invalid) { %> 
                <div class="invalid-feedback p-2 text-center fw-semibold">
                    Username or Password is incorrect. Please try again.
                </div>
            <% } %> 
            </div>
            <div class="d-grid">
              <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Login</button>
            </div>
            <hr class="my-4">
            <div class="mb-3">
              <h3 class="text-center fw-semibold fs-6 text-primary-emphasis"> Don't have an account? <a href="./signUp"> Sign Up </a> </h3>
            </div>
            <div class="d-grid mx-auto my-auto col-6">
              <a href="/home" class="btn btn-info"> Go Back </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("templates/footer") %>