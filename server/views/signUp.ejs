<%- include("templates/header", {additionalStyle: 'authentication.css', title: 'Sign Up'}) %>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h1 class="card-title text-center mb-3 fw-semibold fs-2">Sign Up</h1>
          <h2 class="card-title text-center mb-5 fw-normal fs-6 text-body-secondary">Create your LinkMorpher Account</h2>
          <form action="/signUp/createUser" method="post">
            <div class="form-floating mb-3">
                <input type="text" name="username" placeholder="Username" 
                      value="<%=username%>"
                       class="form-control <% if (locals.isUserValid) { %> 
                                              <%= isUserValid %>"
                                           <% } %>" >
                <label for="username">Username</label>
                <% if (locals.usernameInvalidMessage) { %> 
                  <div class="invalid-feedback">
                      <%= usernameInvalidMessage %>
                  </div>
              <% } %> 
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" placeholder="Password" 
                       class="form-control <% if (locals.isPasswordValid) { %> 
                                              <%= isPasswordValid %>"
                                           <% } %>">
                <label for="password">Password</label>
                <% if (locals.passwordInvalidMessage) { %> 
                  <div class="invalid-feedback">
                      <%= passwordInvalidMessage %>
                  </div>
              <% } %> 
            </div>
            <div class="d-grid">
              <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">Sign
                Up</button>
            </div>
            <hr class="my-4">
            <div class="mb-3">
              <h3 class="text-center fw-semibold fs-6 text-primary-emphasis"> Have an account? <a href="./login"> Login </a> </h3>
            </div>
            <div class="d-grid mx-auto my-auto col-6">
              <a href="/home" class="btn btn-info"> Go Back </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("templates/footer") %>